extends layout

block content
  h1.headLine= challenge.title
  p Difficulty: #{challenge.difficulty} Points: #{challenge.points}
  p= challenge.description
  form(action="/submitChallenge" method="post")
    label(for="challenge1") Mark as Solved!
    input( type="checkbox" id="challenge" name="challenge" value="#{challenge._id}" )
    br
    button(type="submit") Submit